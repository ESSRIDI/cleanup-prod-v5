<ul>

	{% if userOrders is empty %}
		<p>
			Vous n'avez toujours pas de commande...</p>

	{% else %}

		{% for order in userOrders %}
			<li class="cleanup-list">
				<h3>{{order.reference}}</h3>
				{% if order.isPaid %}
					<h3 class="text-cleanup-valid">Payée</h3>
				{% else %}
					<a href="{{path('order_re_prepare', {id: order.id})}}" class="btn-edit">
						Payer votre commande</a>

				{% endif %}

				<div class="div">


					{% if order.status == "Envoyée"  %}
						<h5 class="text-cleanup-valid">
							<small>ETAT:
							</small>
							{{order.status}}</h5>
					{% else %}
						{% if order.status == "Attente_de_paiement"  %}
							<h5 class="text-cleanup-danger">
								<small>ETAT:
								</small>
								{{order.status}}</h5>

						{% else %}

							<h5 class="text-cleanup-cloudy">
								<small>ETAT:
								</small>
								{{order.status}}</h5>
						{% endif %}
					{% endif %}


					<a href="{{ path('app_user_order_details', {id: order.id}) }}" class="btn-primary">
						<span class="material-symbols-outline span">
							manage_search
						</span>
					</a>


				</div>

			</li>
		{% endfor %}
	{% endif %}
</ul>
